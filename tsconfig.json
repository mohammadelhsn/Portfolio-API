{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ESNext"], // ✅ Only ES features, no DOM
		"types": ["node"], // ✅ Use Node types only
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["api/**/*.ts"]
}
